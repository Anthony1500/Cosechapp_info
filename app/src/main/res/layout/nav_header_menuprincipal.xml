<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/nav_header_height"
    android:layout_span="@android:integer/config_longAnimTime"
    android:background="@drawable/banner4"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:layout_anchorGravity="clip_horizontal">

    <TextView
        android:id="@+id/idusuario"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:text=""
        android:translationY="-56dp"
        android:visibility="invisible" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/usuarioimagen"
        android:layout_width="72dp"
        android:layout_height="64dp"

        android:layout_gravity="start"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/ic_launcher"
        android:translationX="-7dp"
        app:civ_border_color="#FF4433"
        app:civ_border_width="1dp" />

    <TextView

        android:id="@+id/mostrarnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>

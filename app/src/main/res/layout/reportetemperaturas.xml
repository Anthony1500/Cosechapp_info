<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <ProgressBar
        android:id="@+id/progressbartemp"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="183dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView29"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:foregroundGravity="bottom|center_vertical|center|clip_vertical"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="10sp"
                android:minHeight="48dp"
                android:text="Lista Temperaturas"
                android:textAlignment="center"
                android:textColor="@color/purple_200"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ListView
                android:id="@+id/listatempera"
                android:layout_width="match_parent"
                android:layout_height="378dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/border_botton_top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ListView>

            <Button
                android:id="@+id/reportetemp"
                android:layout_width="351dp"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:layout_marginTop="436dp"
                android:backgroundTint="@color/colorVerde"
                android:gravity="center"
                android:text="Descargar reporte"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColorLink="@color/blue"
                app:cornerRadius="20dp"
                app:icon="@drawable/excel"
                app:iconGravity="textStart"
                app:iconTintMode="multiply"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" /><!--B贸ton Iniciar Sesi贸n -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/regresar"
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="583dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#FFAB40"
        android:gravity="center"
        android:isScrollContainer="false"

        android:text="Regresar"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconGravity="start"
        app:iconPadding="0dp"
        app:iconTintMode="src_atop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--B贸ton Iniciar Sesi贸n -->


</androidx.constraintlayout.widget.ConstraintLayout>

